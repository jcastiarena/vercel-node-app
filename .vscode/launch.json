{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Vercel Serverless App",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/vercel/dist/index.js",
      "args": ["dev"],
      "runtimeArgs": ["--inspect"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
